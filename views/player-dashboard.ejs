<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Player Dashboard</title>
    <link rel="icon" href="/sports-icon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/styles.css" />
    <style>
      /* Global Styles */
      body {
        background-image: url("bg.jpg");
        background-repeat: no-repeat;
        background-size:cover;
        
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
       
        color: #333;
      }

      /* Container */
      .container2 {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        margin: 20px auto;
        padding: 20px;
        background:url("basketball.jpg")
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      /* Header */
      header {
        text-align: center;
        background: #2c3e50;
        color: white;
        padding: 15px;
        border-radius: 12px 12px 0 0;
      }

      header h1 {
        margin: 0;
        font-size: 22px;
      }

      /* Dashboard Sections */
      .dashboard {
        justify-content: flex-start;
        display: flex;
        flex-wrap:nowrap;
        gap: 20px;
      }

      /* Logout */
      .logout {
        text-align: right;
      }

      .logout a {
        text-decoration: none;
        color: #ff4d4d;
        font-weight: bold;
      }

      /* Section Headings */
      h2 {
        color: #2c3e50;
        border-bottom: 2px solid #2c3e50;
        padding-bottom: 5px;
        font-size: 20px;
      }

      /* Session Lists */
      ul {
        list-style: none;
        padding: 0;
      }

      ul li {
        background: #eef2f6;
        margin: 10px 0;
        padding: 10px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        gap: 5px;
      }

      /* Players List */
      ul ul {
        padding-left: 20px;
      }

      ul ul li {
        font-size: 14px;
      }

      /* Cancelled Sessions */
      .cancelled {
        color: #ff4d4d;
        font-weight: bold;
      }
      .cont{
        width: 400px;
        height: 700px;
      }

      /* Forms */
      form {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      form input,
      form select {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
      }

      form button {
        background: #2c3e50;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
        border-radius: 6px;
        font-size: 14px;
        transition: 0.3s;
      }

      form button:hover {
        background: #304860;
      }
    </style>
  </head>
  <body id="player-dashboard">
    <header>
      <h1>Welcome, <%= user.name %> ðŸ‘‹</h1>
      <div class="logout">
        <a href="/logout">Logout</a>
      </div>
    </header>

    <div class="container2">
      <div class="cont">
      <h2>Create Session</h2>
        <form  action="/create-session" method="POST">
          <label for="sport_id">Sport:</label>
          <select name="sport_id" id="sport_id" required>
            <% sports.forEach(sport => { %>
            <option value="<%= sport.id %>"><%= sport.name %></option>
            <% }) %>
          </select>

          <label for="team1">Team 1:</label>
          <input type="text" name="team1" id="team1" required />

          <label for="team2">Team 2:</label>
          <input type="text" name="team2" id="team2" required />

          <label for="additional_players">Additional Players:</label>
          <input type="number" name="additional_players" id="additional_players" required />

          <label for="date">Date:</label>
          <input type="datetime-local" name="date" id="date" required />

          <label for="venue">Venue:</label>
          <input type="text" name="venue" id="venue" required />

          <button type="submit">Create Session</button>
        </form>
      </div>
      <div class="dashboard">
        
        

        <!-- Joined Sessions -->
        <h2>Joined Sessions</h2>
        <ul id="joinedSessionsList">
          <% joinedSessions.forEach(session => { %>
          <li id="session-<%= session.id %>">
            <strong>Sport:</strong> <%= session.sport_name %> |
            <strong>Teams:</strong> <%= session.team1 %> vs <%= session.team2 %> |
            <strong>Date:</strong> <%= session.date %> |
            <strong>Venue:</strong> <%= session.venue %>

            <br /><strong>Players:</strong>
            <ul>
              <% session.players.forEach(player => { %>
              <li>
                <%= player.name %> <% if (player.id === user.id) { %>(You)<% } %>
              </li>
              <% }) %>
            </ul>


          
            <form action="/leave-session" method="POST">
              <input type="hidden" name="session_id" value="<%= session.id %>" />
              <button type="submit">Leave</button>
            </form>
          

            <!-- Leave button -->
            
          </li>
          <% }) %>
        </ul>

        <!-- Available Sessions -->
        <h2 class="section-title">Available Sessions</h2>
        <ul style="list-style: none; padding: 0;">
          <% sessions.forEach(session => { %>
          <li class="session-card">
            <strong>Sport:</strong> <%= session.sport_name %>,
            <strong>Teams:</strong> <%= session.team1 %> vs <%= session.team2 %>,
            <strong>Date:</strong> <%= session.date %>,
            <strong>Venue:</strong> <%= session.venue %>
            <br />
            <strong>Players:</strong>
            <ul>
              <% session.players.forEach(player => { %>
              <li><%= player.name %></li>
              <% }) %>
            </ul>

            <% if (!session.players.some(player => player.id === user.id)) { %>
              <form action="/join-session/<%= session.id %>" method="POST" style="margin-top: 1rem;">
                <input type="hidden" name="session_id" value="<%= session.id %>" />
                <button type="submit" class="session-button">Join</button>
              </form>
  
            <% } %>

            
          </li>
          <% }) %>
        </ul>

        <!-- Create Session -->
        
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Add event listener for Leave Session buttons
        const leaveButtons = document.querySelectorAll('.leave-session');
        
        leaveButtons.forEach(button => {
          button.addEventListener('click', async (e) => {
            const sessionId = e.target.getAttribute('data-session-id');
            
            // Send a request to leave the session
            const response = await fetch(`/leave-session/${sessionId}`, {
              method: 'POST',
            });
            
            if (response.ok) {
              // Remove the session from the DOM
              const sessionElement = document.getElementById(`session-${sessionId}`);
              sessionElement.remove();
            } else {
              alert('Failed to leave session.');
            }
          });
        });
      });
    </script>
  </body>
</html>
